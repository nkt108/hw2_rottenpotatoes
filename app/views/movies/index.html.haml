-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :sort => @sort, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @filter.include?(rating), :class => "ratings_#{rating}"
  = submit_tag 'Refresh', :class => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => @sort == "title" ? "hilite" : nil}= link_to 'Movie Title', movies_path(:sort => "title", :filter => @filter), :id => "title_header"
      %th Rating
      %th{:class => @sort == "release_date" ? "hilite" : nil}= link_to 'Release Date', movies_path(:sort => "release_date", :filter => @filter), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
